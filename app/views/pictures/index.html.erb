<% if @pictures.any? %>
  <% @pictures.each do |pic| %>
    <h2> <%= pic.caption %> </h2>
    <h2> <%= image_tag pic.image.url(:medium) %> </h2>
    <%= link_to "Edit Picture", edit_picture_path(pic) %>
  <% end %>
<% else %>
  No pictures yet
<% end %>

<%= link_to "Add Picture", new_picture_path %>

